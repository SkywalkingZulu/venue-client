{
  "name": "venue-client",
  "description": "A rewards and bounty tracker platform",
  "version": "0.1.0",
  "author": "Shawn Lauzon <shawn@volentixlabs.com>",
  "private": true,
  "scripts": {
    "dev": "NUXT_ENV_BTT_URL=http://localhost:8000 nuxt",
    "build": "NUXT_ENV_BTT_URL=https://venue-dev.volentix.io nuxt build",
    "build-qa": "NUXT_ENV_BTT_URL=https://venue-uat.volentix.io nuxt build",
    "build-production": "NUXT_ENV_BTT_URL=https://venue.volentix.io nuxt build",
    "start": "nuxt start",
    "lint": "eslint --ext .js,.vue .",
    "lintfix": "eslint --fix --ext .js,.vue .",
    "precommit": "lint-staged",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "sls:local": "sls offline",
    "sls:create": "npm run build && sls create_domain && sls deploy",
    "sls:create-qa": "npm run build-qa && sls create_domain --stage qa && sls deploy --stage qa",
    "sls:create-production": "npm run build-production && sls create_domain --stage production && sls deploy --production",
    "sls:delete": "sls remove && sls delete_domain",
    "sls:deploy": "npm run build && sls deploy",
    "sls:deploy-qa": "npm run build-qa && sls deploy --stage qa",
    "sls:deploy-production": "npm run build-production && sls deploy --stage production"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lintfix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    }
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.5.2",
    "@nuxtjs/axios": "^5.3.3",
    "@nuxtjs/google-analytics": "^2.0.2",
    "buefy": "^0.7.0",
    "chart.js": "^2.7.2",
    "cookie": "^0.3.1",
    "cookie-parser": "^1.4.3",
    "countup.js": "^1.9.3",
    "express": "^4.16.4",
    "js-cookie": "^2.2.0",
    "numeral": "^2.0.6",
    "nuxt": "^2.2.0",
    "nuxt-i18n": "^5.4.4",
    "serverless-http": "^1.8.0",
    "vue-chartjs": "^3.3.1",
    "vue-clipboard2": "^0.1.0",
    "vue-countup-v2": "^1.0.3",
    "vue-social-sharing": "^2.3.3",
    "vuex": "^3.0.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "ajv": "^6.5.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-vue": "^4.5.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.2",
    "prettier": "1.13.5",
    "rollup": "^0.65.2",
    "sass-loader": "^7.0.3",
    "serverless": "^1.32.0",
    "serverless-domain-manager": "^2.6.6",
    "serverless-offline": "^3.31.3",
    "serverless-s3-sync": "^1.7.1",
    "vue-jest": "^2.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
